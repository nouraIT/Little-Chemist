<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:stretchColumns="1" >
<!--            android:background="@drawable/app_home_bg"
-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#FFFFFF"

            tools:context=".Chapters">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"

                android:minHeight="?attr/actionBarSize"
                android:theme="@style/MyApp.ActionBarTheme2"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/toolbarTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/chapters"
                    android:textAppearance="@android:style/TextAppearance.WindowTitle"
                    android:textColor="@color/OrangeText"
                    android:textSize="30sp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="147dp"
                    tools:layout_editor_absoluteY="19dp" />

            </androidx.appcompat.widget.Toolbar>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewch1"
                android:layout_width="339dp"
                android:layout_height="159dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:elevation="100dp"

                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toTopOf="@+id/cardviewch2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ch1_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    android:layout_gravity="center_horizontal"
                    android:alpha="0.8"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"

                        android:text="@string/chapter_1"
                        android:textColor="#FD061955"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="roboto_bold"
                        android:text="@string/Ch1Name"
                        android:textColor="#FD061955"

                        android:textSize="29sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.8"
                    android:background="@drawable/atom"
                    android:contentDescription="@string/Ch1Name" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/padlock"
                    android:contentDescription="@string/chapter_Unlocked" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewch2"
                android:layout_width="339dp"
                android:layout_height="159dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="1"
                android:elevation="100dp"

                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toTopOf="@+id/cardviewch3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardviewch1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ch2_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:alpha="1"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:alpha="1"
                        android:layout_marginTop="15dp"

                        android:fontFamily="roboto_bold"
                        android:text="@string/chapter_2"
                        android:textColor="#1B5F07"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:fontFamily="roboto_bold"
                        android:text="@string/Ch2Name"

                        android:textColor="#1B5F07"
                        android:textSize="29sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="97dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.8"
                    android:background="@drawable/element"
                    android:contentDescription="@string/Ch2Name" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/lock"
                    android:contentDescription="@string/chapter_Locked" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewch3"
                android:layout_width="339dp"
                android:layout_height="159dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="100dp"

                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toTopOf="@+id/cardviewch4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardviewch2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ch3_bg" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:alpha="1"

                        android:fontFamily="roboto_bold"
                        android:text="@string/chapter_3"
                        android:textColor="#4E1111"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:fontFamily="roboto_bold"
                        android:text="@string/Ch3Name"
                        android:textColor="#4E1111"

                        android:textSize="29sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.8"
                    android:background="@drawable/flask"
                    android:contentDescription="@string/Ch3Name" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/lock"
                    android:contentDescription="@string/chapter_Locked" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewch4"
                android:layout_width="339dp"
                android:layout_height="159dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="10dp"

                app:layout_constraintBottom_toTopOf="@+id/cardviewch5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardviewch3">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ch4_bg" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="179dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:fontFamily="roboto_bold"
                        android:text="@string/chapter_4"
                        android:textColor="#F7250249"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:fontFamily="roboto_bold"
                        android:text="@string/Ch4Name"
                        android:textAlignment="center"
                        android:textColor="#F7250249"
                        android:textSize="29sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.8"
                    android:layout_marginBottom="3dp"

                    android:background="@drawable/dry_tree"
                    android:contentDescription="@string/Ch4Name" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/lock"
                    android:contentDescription="@string/chapter_Locked" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewch5"
                android:layout_width="339dp"
                android:layout_height="159dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alpha="1"
                android:elevation="100dp"

                app:cardCornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardviewch4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ch5_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:alpha="1"
                    android:elevation="20dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:fontFamily="roboto_bold"
                        android:text="@string/chapter_5"
                        android:textColor="#631A01"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="roboto_bold"
                        android:text="@string/Ch5Name"
                        android:textColor="#631A01"

                        android:textSize="29sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="74dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.8"
                    android:background="@drawable/periodictable"
                    android:contentDescription="@string/Ch5Name" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/lock"
                    android:contentDescription="@string/chapter_Locked" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </TableLayout>

    </ScrollView>
