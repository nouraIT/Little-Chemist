<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackgroundnew"
    tools:context=".Home"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="470dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoHome">


        <!--  [purple 4a47a7 ] blue >>> 008DFF Orange >> E06E4A    white E4F3F1F1-->




        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewchapters"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="192dp"
            app:cardBackgroundColor="#4a47a7"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/east_djakarta"
                android:text="@string/little_chemist"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp">

            <ProgressBar
                android:id="@+id/content_pro"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="220dp"
                android:layout_height="72dp"
                android:layout_gravity="start"
                android:layout_marginStart="50dp"
                android:progress="40" />

            <ImageView
                android:id="@+id/progressIcon"
                android:layout_width="43dp"
                android:layout_height="54dp"
                android:layout_gravity="end"
                android:src="@drawable/testtube" />
        </LinearLayout>

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@android:color/darker_gray" />

        <org.eazegraph.lib.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="379dp"
            android:layout_height="233dp"
            android:layout_gravity="center"
            android:layout_marginTop="85dp"
            android:padding="8dp"

            app:egLegendTextSize="18sp"
            app:egUsePieRotation="true"
            app:egValueTextSize="36sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardviewchapters" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="61dp"
        android:layout_height="35dp"

        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gear_purple" />

    <ImageView
        android:id="@+id/logoHome"
        android:layout_width="251dp"
        android:layout_height="133dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/app_name"
        android:elevation="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logowithshodow" />


    <!--        app:srcCompat="@drawable/button" -->


</androidx.constraintlayout.widget.ConstraintLayout>

