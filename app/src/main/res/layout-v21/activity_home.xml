<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_home_bg"
    tools:context=".Home"
    android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"

    >


    <ImageView
        android:id="@+id/logoHome"
        android:layout_width="251dp"
        android:layout_height="133dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/app_name"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocropped" />


    <ImageView
        android:id="@+id/settings"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"

        android:layout_marginTop="28dp"
        android:contentDescription="@string/settings"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gear_icon_orange2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewchapters"
        android:layout_width="298dp"
        android:layout_height="134dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="192dp"
        app:cardBackgroundColor="#E06E4A"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoHome"
        app:layout_constraintVertical_bias="0.24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:elevation="20dp"
            android:text="@string/little_chemist"
            android:textColor="@color/white"
            android:textSize="25sp" />


        <ProgressBar
            android:id="@+id/content_pro"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="220dp"
            android:layout_height="72dp"

            android:layout_gravity="start"

            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:progress="40" />

        <ImageView
            android:id="@+id/progressIcon"
            android:layout_width="53dp"
            android:layout_height="64dp"

            android:layout_gravity="end"

            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"

            android:contentDescription="@string/progressBar"
            android:src="@drawable/testtube" />


    </androidx.cardview.widget.CardView>


