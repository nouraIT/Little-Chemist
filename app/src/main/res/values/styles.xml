<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/primaryPurple</item>

    </style>

<!--            <item name="colorPrimaryDark">@color/primaryYellow</item>
-->

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/darkpruple</item>
<!--        <item name="android:subMenuArrow">"30dp"</item>-->
    </style>



    <style name="MyApp.ActionBarTheme2" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/OrangeText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primaryPurple</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>

    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#fff</item>
        <item name="colorControlNormal">#BBB9B9</item>
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="TextLabel2" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <!-- <item name="android:textSize">20sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/darkpruple</item>
        <item name="colorControlNormal">@color/primaryPurple</item>
        <item name="colorControlActivated">@color/darkpruple</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Spinner">
        <item name="android:textColor">@color/purple</item>

    </style>



</resources>
