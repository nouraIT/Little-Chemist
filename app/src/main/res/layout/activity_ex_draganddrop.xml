<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".View_lesson.ex_DragAndDrop">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/MyApp.ActionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="313dp"
        android:layout_height="437dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="111dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/exNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:text="Exercise 1"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/Q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Drag the building blocks to create an atom"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/dropArea"
                android:layout_width="120dp"
                android:layout_height="120dp"

                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/drop_area"

                android:orientation="vertical"

                >

                <GridLayout
                    android:id="@+id/dropArea1"
                    android:layout_width="106dp"
                    android:layout_height="108dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:numColumns="2"
                    android:stretchMode="none"
                    />

<!--                <LinearLayout-->
<!--                    android:id="@+id/dropArea1"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:layout_marginStart="2dp"-->
<!--                    android:layout_marginEnd="2dp"-->
<!--                    android:layout_marginTop="2dp"-->
<!--                    android:layout_marginBottom="2dp"-->
<!--                    android:orientation="horizontal" />-->

<!--                <LinearLayout-->
<!--                    android:id="@+id/dropArea2"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="50dp"-->

<!--                    android:layout_marginStart="2dp"-->
<!--                    android:layout_marginEnd="2dp"-->
<!--                    android:layout_marginTop="2dp"-->
<!--                    android:layout_marginBottom="2dp"-->
<!--                    android:orientation="horizontal" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dropArea3"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:elevation="4dp"
                android:weightSum="4"

                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                >

                <ImageView
                    android:id="@+id/c1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/c1"

                    android:layout_marginStart="2dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="2dp"
                    />

                <ImageView
                    android:id="@+id/c2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/c2"

                    android:layout_marginStart="2dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="2dp"
                    />

                <ImageView
                    android:id="@+id/c3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/c3"

                    android:layout_marginStart="2dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="2dp"
                    />

                <ImageView
                    android:id="@+id/c4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/c4"

                    android:layout_marginStart="2dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="2dp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"

                android:text="@string/reset"

                android:background="?android:attr/panelBackground"
                android:backgroundTint="?android:attr/panelBackground"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_btn"
        android:text="@string/finishBtn"
        android:textColor="@color/darkpruple"

        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

</androidx.constraintlayout.widget.ConstraintLayout>