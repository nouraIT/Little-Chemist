<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewchapters"
        android:layout_width="295dp"
        android:layout_height="418dp"
        android:layout_marginTop="148dp"
        android:layout_marginBottom="93dp"
        app:cardBackgroundColor="@color/colorIcons"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/slide_description"
            android:layout_width="262dp"
            android:layout_height="127dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="200dp"
            android:elevation="30dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary" />

        <ImageView
            android:id="@+id/slide_img"
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:elevation="30dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <Button
            android:id="@+id/ex"
            android:layout_width="121dp"
            android:layout_height="34dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/ch1_bg"
            android:elevation="30dp"
            android:onClick="onBtnExClick"
            android:text="Get exercise "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:visibility="invisible" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>