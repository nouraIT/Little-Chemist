<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73E5FB"
    tools:context=".Chapters_dir.Ch1">
<!--#01BEAA-->
<!--    40C4FF -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"

        android:minHeight="?attr/actionBarSize"
        android:theme="@style/MyApp.ActionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"

        android:fontFamily="@font/dk_sugary_pancake"
        android:text="@string/Ch1Name"
        android:textColor="@color/white"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"

        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="8dp"

        android:src="@drawable/ch1character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/chapter_card_bg"

        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewlLSN1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cardCornerRadius="25dp"
                    android:layout_marginEnd="5dp"
                    >

                    <LinearLayout
                        android:id="@+id/lin1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        >



                        <ImageView
                            android:id="@+id/lockicon1"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="0dp"
                            android:layout_gravity="end"
                            android:elevation="5dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"

                            />

                        <TextView
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="-15dp"

                            android:alpha="0.5"
                            android:text="@string/Ch1Lsn1"
                            android:textColor="@color/Black"
                            android:textSize="14sp"
                            android:fontFamily="@font/dk_sugary_pancake"
                            />

                        <ImageView
                            android:id="@+id/lsnimg1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"

                            android:alpha="1"
                            android:background="@drawable/atom"
                            android:contentDescription="@string/Ch1Lsn1" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewlLSN2"
                    app:cardCornerRadius="25dp"

                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"

                    >

                    <ImageView
                        android:id="@+id/lockicon2"

                        android:elevation="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="right"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/lock"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="-15dp"
                        android:layout_marginStart="2dp"

                        android:text="@string/Ch1Lsn2"
                        android:textSize="15sp"
                        android:textColor="@color/Black"
                        android:alpha="0.5"
                        android:fontFamily="@font/dk_sugary_pancake"
                        />
                    <ImageView
                        android:id="@+id/lsnimg2"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/flash"
                        android:contentDescription="@string/Ch1Lsn2" />


                </LinearLayout>
                    ></androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewlLSN3"
                    app:cardCornerRadius="25dp"
                    android:layout_marginStart="5dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"

                    >

                    <ImageView
                        android:id="@+id/lockicon3"

                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="end"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/lock"
                        android:elevation="5dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="-15dp"
                        android:layout_marginStart="2dp"

                        android:text="@string/Ch1Lsn3"
                        android:textSize="15sp"
                        android:textColor="@color/Black"
                        android:alpha="0.5"
                        android:fontFamily="@font/dk_sugary_pancake"
                        />

                    <ImageView
                        android:id="@+id/lsnimg3"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/twins"
                        android:contentDescription="@string/Ch1Lsn3" />


                </LinearLayout>

                    ></androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:paddingBottom="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewlLSN4"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="25dp"

                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"

                    >

                    <ImageView
                        android:id="@+id/lockicon4"

                        android:elevation="5dp"

                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="end"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/lock"

                        />

                    <TextView
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-15dp"

                        android:alpha="0.5"
                        android:fontFamily="@font/dk_sugary_pancake"
                        android:text="@string/Ch1Lsn4"
                        android:textColor="@color/Black"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/lsnimg4"

                        android:layout_width="70dp"
                        android:layout_height="70dp"

                        android:alpha="0.5"
                        android:background="@drawable/uncertainty"
                        android:contentDescription="@string/Ch1Lsn4" />


                </LinearLayout>

                    ></androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewlLSN5"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="25dp"

                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"

                    >

                    <ImageView
                        android:id="@+id/lockicon5"

                        android:elevation="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="end"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/lock"

                        />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="-15dp"

                        android:alpha="0.5"
                        android:text="@string/Ch1Lsn5"
                        android:textColor="@color/Black"
                        android:textSize="15sp"
                        android:fontFamily="@font/dk_sugary_pancake"
                        />
                    <ImageView
                        android:id="@+id/lsnimg5"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:alpha="0.5"
                        android:background="@drawable/fission"
                        android:contentDescription="@string/Ch1Lsn5" />


                </LinearLayout>

                    ></androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/quiz"
                    android:layout_width="match_parent"

                    app:cardCornerRadius="25dp"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="4dp"

                        android:text="@string/Quiz"
                        android:textSize="20sp"
                        android:textColor="@color/Black"
                        android:alpha="0.5"
                        android:fontFamily="@font/dk_sugary_pancake"
                        />
                    <ImageView
                        android:id="@+id/qzimg"

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:alpha="0.5"
                        android:background="@drawable/grade"
                        android:contentDescription="@string/Quiz"/>


                </LinearLayout>
                    ></androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

