<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<!--        hello-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewquiz"
            android:layout_width="295dp"
            android:layout_height="418dp"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/colorIcons"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
                <!--        app:cardCornerRadius="50dp"-->
                <LinearLayout
                    android:id="@+id/optextandbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="12dp"
                            android:fontFamily="@font/dk_sugary_pancake"
                            android:gravity="center_horizontal"
                            android:text="here"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/darkpruple" />

                        <Button
                            android:id="@+id/chos1btn"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="@color/TransparentWhite"
                            android:fontFamily="@font/dk_sugary_pancake"
                            android:text="button"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/chos2btn"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="@color/TransparentWhite"
                            android:fontFamily="@font/dk_sugary_pancake"
                            android:text="button"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/chos3btn"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="@color/TransparentWhite"
                            android:fontFamily="@font/dk_sugary_pancake"
                            android:text="button"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/chos4btn"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_button"
                            android:backgroundTint="@color/TransparentWhite"
                            android:fontFamily="@font/dk_sugary_pancake"
                            android:text="button"
                            android:textAllCaps="false" />

                </LinearLayout>

        </androidx.cardview.widget.CardView>

<!--        corner radius 25dp-->
<!--        android:shadowColor="#000"-->


</androidx.constraintlayout.widget.ConstraintLayout>