<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scorebackground"
    tools:context=".Quiz_score">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"

        android:minHeight="?attr/actionBarSize"
        android:theme="@style/MyApp.ActionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/east_djakarta"
            android:text="@string/QuizScore"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </androidx.appcompat.widget.Toolbar>


    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar3"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar2"
        app:progress_current="9"
        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="@color/cpb_red"
        app:progress_text_color="@color/cpb_red" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar2"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toTopOf="@+id/numberbar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar4"
        app:progress_current="9"
        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="@color/OrangeText"
        app:progress_text_color="@color/OrangeText" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar4"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toTopOf="@+id/numberbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar5"
        app:progress_current="35"
        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="@color/primaryYellow"
        app:progress_text_color="@color/primaryYellow" />


    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar5"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toTopOf="@+id/numberbar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar6"

        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="@color/cpb_green"
        app:progress_text_color="@color/cpb_green" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar6"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toTopOf="@+id/numberbar5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piechart"


        app:progress_reached_bar_height="7dp"
        app:progress_reached_color="@color/cpb_blue"
        app:progress_text_color="@color/cpb_blue"
        app:progress_text_visibility="visible" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"

        android:fontFamily="@font/east_djakarta"
        android:text="@string/Ch1Name"
        android:textColor="@color/cpb_blue"
        android:textSize="12sp"

        app:layout_constraintBottom_toTopOf="@+id/numberbar6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piechart"
        app:layout_constraintVertical_bias="0.0"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"

        android:fontFamily="@font/east_djakarta"

        android:text="@string/Ch2Name"
        android:textColor="@color/cpb_green"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/numberbar5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"


        android:fontFamily="@font/east_djakarta"
        android:text="@string/Ch3Name"
        android:textColor="#F8C765"

        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/numberbar4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"

        android:fontFamily="@font/east_djakarta"

        android:text="@string/Ch4Name"
        android:textColor="@color/OrangeText"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/numberbar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"

        android:fontFamily="@font/east_djakarta"

        android:text="@string/Ch5Name"
        android:textColor="@color/cpb_red"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/numberbar3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar2" />

    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="379dp"
        android:layout_height="233dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="300dp"
        android:padding="8dp"
        app:egLegendTextSize="18sp"
        app:egUsePieRotation="true"
        app:egValueTextSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>