<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhome"
    tools:context=".Quiz_score">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"

        android:minHeight="?attr/actionBarSize"
        android:theme="@style/MyApp.ActionBarTheme2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/QuizScore"
            android:textColor="@color/OrangeText"
            android:textSize="25sp" />

    </androidx.appcompat.widget.Toolbar>

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar3"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar2"
        app:progress_current="9"
        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="#98db81"
        app:progress_text_color="#98db81" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar2"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/numberbar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar4"
        app:progress_current="9"
        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="#FED70E"
        app:progress_text_color="#FED70E" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar4"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/numberbar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar5"
        app:progress_current="35"
        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="#CDA67F"
        app:progress_text_color="#CDA67F" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar5"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/numberbar4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberbar6"
        app:progress_current="25"
        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="#56B7F1"
        app:progress_text_color="#56B7F1" />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/numberbar6"
        style="@style/NumberProgressBar_Relax_Blue"
        android:layout_height="10dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/numberbar5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piechart"
        app:progress_current="15"
        app:progress_reached_bar_height="6dp"
        app:progress_reached_color="#F5545C"
        app:progress_text_color="#F5545C"
        app:progress_text_visibility="visible" />

    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="379dp"
        android:layout_height="233dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="300dp"
        android:padding="8dp"
        app:egLegendTextSize="18sp"
        app:egUsePieRotation="true"
        app:egValueTextSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>