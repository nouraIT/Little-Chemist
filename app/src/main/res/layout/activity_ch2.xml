<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_home_bg"
    tools:context=".Chapters_dir.Ch2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"

                android:minHeight="?attr/actionBarSize"
                android:theme="@style/MyApp.ActionBarTheme2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/toolbarTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/chapter_2"

                    android:textAppearance="@android:style/TextAppearance.WindowTitle"
                    android:textColor="@color/OrangeText"
                    android:textSize="22sp"
                    android:fontFamily="@font/roboto_bold"

                    android:visibility="visible"
                    tools:layout_editor_absoluteX="147dp"
                    tools:layout_editor_absoluteY="19dp"
                    tools:targetApi="jelly_bean" />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/chapterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/OrangeText"
                android:gravity="center"
                android:text="@string/Ch2Name"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                tools:targetApi="jelly_bean" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewlLSN1"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_marginStart="40dp"

                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"

                android:elevation="100sp"
                app:cardBackgroundColor="@color/Unlocked"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/cardviewlLSN2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chapterName"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="casual"
                        android:text="@string/lesson1"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="@string/Ch2Lsn1"
                        android:textSize="20sp"

                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.5"
                    android:background="@drawable/atom"
                    android:contentDescription="@string/Ch1Name" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewlLSN2"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_marginStart="16dp"

                android:layout_marginTop="32dp"
                android:layout_marginEnd="40dp"

                android:elevation="100dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardviewlLSN1"
                app:layout_constraintTop_toBottomOf="@+id/chapterName"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="casual"
                        android:text="@string/lesson2"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="@string/Ch2Lsn2"
                        android:textSize="20sp"

                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.5"
                    android:background="@drawable/polymer"
                    android:contentDescription="@string/Ch2Lsn2" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewlLSN3"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_marginStart="40dp"

                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"

                android:elevation="100dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/cardviewlLSN4"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardviewlLSN1"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="casual"
                        android:text="@string/lesson3"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="@string/Ch2Lsn3"
                        android:textSize="19sp"

                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.5"
                    android:background="@drawable/bond"
                    android:contentDescription="@string/Ch2Lsn3"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewlLSN4"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_marginStart="16dp"

                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"

                android:elevation="100dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardviewlLSN3"
                app:layout_constraintTop_toBottomOf="@+id/cardviewlLSN2"
                tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:elevation="20dp"
                    android:orientation="vertical"
                    tools:targetApi="lollipop">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="casual"
                        android:text="@string/lesson4"
                        android:textSize="16sp"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="@string/Ch2Lsn4"
                        android:textSize="17sp"

                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.5"
                    android:background="@drawable/balance"
                    android:contentDescription="@string/Ch2Lsn4" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewlLSN5"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_marginTop="16dp"
                android:elevation="100dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardviewlLSN4" tools:targetApi="lollipop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:elevation="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="casual"
                        android:text="@string/lesson5"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="casual"
                        android:gravity="center"
                        android:text="@string/Ch2Lsn5"
                        android:textSize="20sp"

                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.5"
                    android:background="@drawable/ph"
                    android:contentDescription="@string/Ch2Lsn5" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/quiz"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:elevation="100dp"
                app:cardBackgroundColor="@color/UnlockedQuiz"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardviewlLSN5"
                tools:targetApi="lollipop">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="@string/Quiz"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:alpha="0.5"
                    android:background="@drawable/grade"
                    android:contentDescription="@string/Quiz"
                     />


            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>